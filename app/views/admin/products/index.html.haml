%p#notice= notice
%h1 Products
%table
  %thead
    %tr
      %th Inventory
      %th Title
      %th Description
      %th Price
      %th Available quantity
      %th Brand
      %th Categories
      %th{colspan: "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.inventory_id
        %td= product.title
        %td= product.description
        %td= product.price
        %td= product.available_quantity
        %td
          - if !product.brand.nil?
            = product.brand.name
        %td
          - product.categories.each do |category|
            = category.name
        %td= link_to 'Show', admin_product_path(product)
        %td= link_to 'Edit', edit_admin_product_path(product)
        %td= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }

%br/
= link_to 'New Product', new_admin_product_path