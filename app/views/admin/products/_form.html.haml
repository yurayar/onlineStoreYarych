= simple_form_for([:admin, @product]) do |f|
  - if product.errors.any?
    #error_explanation
      %h2
        = pluralize(product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - product.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :inventory_id
    = f.number_field :inventory_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :available_quantity
    = f.number_field :available_quantity
  .field
    = f.association :categories
  .field
    = f.association :brand
  .field
    = f.file_field :product_image, value: @product.product_image
  .actions
    = f.submit