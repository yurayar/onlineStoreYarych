.brand-form-container
  .row
    .col-lg-3
    .col-lg-6
      .brand-form
        = simple_form_for([:admin, brand]) do |f|
          .form-group
            = f.input :name, input_html: {class: 'form-control'}
          .form-group
            = f.input :country, :as => :string, input_html: {class: 'form-control'}
          .form-group
            = f.submit class: 'btn btn-primary btn-lg w-100'
    .col-lg-3
