.shipping-method-form-container
  .row
    .col-lg-3
    .col-lg-6
      .shipping-method-form
        = simple_form_for([:admin, @shipping_method]) do |f|

          = f.error_notification

          .form-group
            = f.input :name, input_html: {class: 'form-control'}
          .form-group
            = f.input :cost, input_html: {class: 'form-control'}
          .form-group
            = f.submit class: 'btn btn-primary btn-lg w-100'
    .col-lg-3
