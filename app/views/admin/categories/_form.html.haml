.category-form-container
  .row
    .col-lg-3
    .col-lg-6
      .category-form
        = simple_form_for([:admin, category]) do |f|
          .form-group
            = f.input :name, input_html: {class: 'form-control'}
          .form-group
            = f.input :slug, input_html: {class: 'form-control'}
          .form-group
            = f.label :parent_id, label: 'Parent category'
            = f.collection_select :parent_id, Category.all, :id, :name, {}, {:class => 'form-control'}
          .form-group
            = f.submit class: 'btn btn-primary btn-lg w-100'
    .col-lg-3


